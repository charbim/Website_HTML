rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to write to userTracking collection (for tracking purposes)
    // Restrict reads to prevent unauthorized access to user data
    match /userTracking/{userId} {
      allow read: if false; // Only you can read via Firebase Console
      allow write: if true; // Anyone can write (needed for tracking)
    }
    
    // Deny all other reads/writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}





